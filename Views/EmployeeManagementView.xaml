<UserControl x:Class="PersonalPPEManager.Views.EmployeeManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PersonalPPEManager.Views"
             xmlns:viewmodels="clr-namespace:PersonalPPEManager.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1000"
             Background="White">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="员工信息管理" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button Content="刷新列表" Command="{Binding RefreshCommand}" Margin="20,0,0,0" Padding="10,5" VerticalAlignment="Center"/>
        </StackPanel>

        <DataGrid Grid.Row="1" x:Name="EmployeesDataGrid" 
                  ItemsSource="{Binding Employees}" 
                  SelectedItem="{Binding SelectedEmployee, Mode=TwoWay}"
                  AutoGenerateColumns="False" CanUserAddRows="False"
                  IsReadOnly="True" SelectionMode="Single"
                  VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn Header="工号" Binding="{Binding EmployeeID}" Width="100"/>
                <DataGridTextColumn Header="姓名" Binding="{Binding Name}" Width="100"/>
                <DataGridTextColumn Header="入职时间" Binding="{Binding EntryDate, StringFormat=yyyy-MM-dd}" Width="100"/>
                <DataGridTextColumn Header="工序" Binding="{Binding Process}" Width="120"/>
                <DataGridTextColumn Header="一楼衣柜" Binding="{Binding LockerClothes1}" Width="100"/>
                <DataGridTextColumn Header="一楼鞋柜" Binding="{Binding LockerShoes1}" Width="100"/>
                <DataGridTextColumn Header="二楼衣柜" Binding="{Binding LockerClothes2}" Width="100"/>
                <DataGridTextColumn Header="二楼鞋柜" Binding="{Binding LockerShoes2}" Width="100"/>
                <DataGridTextColumn Header="备注" Binding="{Binding Remarks}" Width="150"/>
                <DataGridTextColumn Header="状态" Binding="{Binding Status}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="2" Margin="0,10,0,0" Padding="15" BorderBrush="LightGray" BorderThickness="1" CornerRadius="3">
            <Grid DataContext="{Binding EditingEmployee}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="70"/>
                    <ColumnDefinition Width="*" MinWidth="150"/>
                    <ColumnDefinition Width="Auto" MinWidth="70"/>
                    <ColumnDefinition Width="*" MinWidth="150"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="工号:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding EmployeeID, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,10,5" 
                         IsEnabled="{Binding Path=DataContext.IsNewEmployeeMode, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"/>

                <Label Grid.Row="0" Grid.Column="2" Content="姓名:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Grid.Row="0" Grid.Column="3" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,5"/>

                <Label Grid.Row="1" Grid.Column="0" Content="入职时间:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <DatePicker Grid.Row="1" Grid.Column="1" SelectedDate="{Binding EntryDate, UpdateSourceTrigger=PropertyChanged, StringFormat=yyyy-MM-dd, TargetNullValue=''}" Margin="0,5,10,5"/>

                <Label Grid.Row="1" Grid.Column="2" Content="工序:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Grid.Row="1" Grid.Column="3" Text="{Binding Process, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,5"/>

                <Label Grid.Row="2" Grid.Column="0" Content="一楼衣柜:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding LockerClothes1, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,10,5"/>

                <Label Grid.Row="2" Grid.Column="2" Content="一楼鞋柜:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Grid.Row="2" Grid.Column="3" Text="{Binding LockerShoes1, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,5"/>

                <Label Grid.Row="3" Grid.Column="0" Content="二楼衣柜:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding LockerClothes2, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,10,5"/>

                <Label Grid.Row="3" Grid.Column="2" Content="二楼鞋柜:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Grid.Row="3" Grid.Column="3" Text="{Binding LockerShoes2, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,5"/>

                <Label Grid.Row="4" Grid.Column="0" Content="状态:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ComboBox Grid.Row="4" Grid.Column="1" 
                          SelectedValue="{Binding Status, UpdateSourceTrigger=PropertyChanged}" 
                          SelectedValuePath="Content" Margin="0,5,10,5">
                    <ComboBoxItem Content="在职"/>
                    <ComboBoxItem Content="离职"/>
                </ComboBox>

                <Label Grid.Row="4" Grid.Column="2" Content="备注:" VerticalAlignment="Top" Margin="0,5,5,0"/>
                <TextBox Grid.Row="4" Grid.Column="3" 
                         Text="{Binding Remarks, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,5"
                         MinHeight="40" MaxHeight="80" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

                <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                    <Button Content="新增员工" Command="{Binding Path=DataContext.AddNewCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" Margin="0,0,10,0" Padding="10,5"/>
                    <Button Content="清空表单" Command="{Binding Path=DataContext.ClearFormCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" Margin="0,0,10,0" Padding="10,5"/>
                    <Button Content="删除选中" Command="{Binding Path=DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" Margin="0,0,10,0" Padding="10,5" Background="LightCoral"/>
                    <Button Content="保存更改" Command="{Binding Path=DataContext.SaveCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" Padding="10,5" IsDefault="True" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>