<UserControl x:Class="PersonalPPEManager.Views.QueryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:PersonalPPEManager.ViewModels"
             xmlns:converters="clr-namespace:PersonalPPEManager.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="White">

    <UserControl.Resources>
        <ResourceDictionary>
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="综合查询" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="查询类型:" VerticalAlignment="Center"/>
            <ComboBox ItemsSource="{Binding SearchTypes}" SelectedItem="{Binding SelectedSearchType}" MinWidth="100" Margin="5,0" VerticalAlignment="Center"/>
            <Label Content="搜索内容:" VerticalAlignment="Center"/>
            <TextBox Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}" MinWidth="200" Margin="5,0" VerticalAlignment="Center"/>
            <Button Content="查询" Command="{Binding SearchCommand}" Padding="10,5" Margin="5,0"/>
        </StackPanel>

        <DataGrid Grid.Row="2" Margin="0,5,0,10"
                  ItemsSource="{Binding SearchResultsEmployees}"
                  SelectedItem="{Binding SelectedEmployeeFromResults, Mode=TwoWay}"
                  AutoGenerateColumns="False" CanUserAddRows="False"
                  IsReadOnly="True" SelectionMode="Single" MaxHeight="200"
                  Visibility="{Binding IsSearchResultsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="工号" Binding="{Binding EmployeeID}" Width="120"/>
                <DataGridTextColumn Header="姓名" Binding="{Binding Name}" Width="120"/>
                <DataGridTextColumn Header="工序" Binding="{Binding Process}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" 
                      Visibility="{Binding IsEmployeeDetailsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel>
                <GroupBox Header="员工详细信息" Margin="0,0,0,10" Padding="10" FontWeight="Normal">
                    <Grid DataContext="{Binding DisplayedEmployee}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="70"/>
                            <ColumnDefinition Width="*" MinWidth="120"/>
                            <ColumnDefinition Width="Auto" MinWidth="70"/>
                            <ColumnDefinition Width="*" MinWidth="120"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="工号:" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding EmployeeID}" VerticalAlignment="Center" Margin="0,3,10,3" TextWrapping="Wrap"/>

                        <Label Grid.Row="0" Grid.Column="2" Content="姓名:" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                        <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding Name}" VerticalAlignment="Center" Margin="0,3,0,3" TextWrapping="Wrap"/>

                        <Label Grid.Row="1" Grid.Column="0" Content="入职时间:" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding EntryDate, StringFormat=yyyy/M/d}" VerticalAlignment="Center" Margin="0,3,10,3" TextWrapping="Wrap"/>

                        <Label Grid.Row="1" Grid.Column="2" Content="工序:" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                        <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding Process}" VerticalAlignment="Center" Margin="0,3,0,3" TextWrapping="Wrap"/>

                        <Label Grid.Row="2" Grid.Column="0" Content="一楼衣柜:" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding LockerClothes1}" VerticalAlignment="Center" Margin="0,3,10,3" TextWrapping="Wrap"/>

                        <Label Grid.Row="2" Grid.Column="2" Content="一楼鞋柜:" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                        <TextBlock Grid.Row="2" Grid.Column="3" Text="{Binding LockerShoes1}" VerticalAlignment="Center" Margin="0,3,0,3" TextWrapping="Wrap"/>

                        <Label Grid.Row="3" Grid.Column="0" Content="二楼衣柜:" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding LockerClothes2}" VerticalAlignment="Center" Margin="0,3,10,3" TextWrapping="Wrap"/>

                        <Label Grid.Row="3" Grid.Column="2" Content="二楼鞋柜:" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                        <TextBlock Grid.Row="3" Grid.Column="3" Text="{Binding LockerShoes2}" VerticalAlignment="Center" Margin="0,3,0,3" TextWrapping="Wrap"/>

                    </Grid>
                </GroupBox>

                <GroupBox Header="当前持有劳保用品 (有效记录)" Margin="0,0,0,10" Padding="10">
                    <DataGrid ItemsSource="{Binding EmployeeActivePPE}"
                              SelectedItem="{Binding SelectedPpeAssignmentForEdit, Mode=TwoWay}" MouseDoubleClick="PpeDataGrid_MouseDoubleClick" AutoGenerateColumns="False" CanUserAddRows="False"
                              IsReadOnly="True" MinHeight="150"
                              SelectionMode="Single" VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Auto">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="用品类型" Binding="{Binding PPE_Type}" Width="120"/>
                            <DataGridTextColumn Header="物品编号" Binding="{Binding ItemSpecificCode}" Width="120"/>
                            <DataGridTextColumn Header="发放日期" Binding="{Binding IssueDate, StringFormat=yyyy-MM-dd}" Width="100"/>
                            <DataGridTextColumn Header="尺码" Binding="{Binding Size}" Width="80"/>
                            <DataGridTextColumn Header="新旧状态" Binding="{Binding Condition}" Width="100"/>
                            <DataGridCheckBoxColumn Header="有效" Binding="{Binding IsActive, Mode=OneWay}" Width="60"/>
                            <DataGridTemplateColumn Header="备注" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Remarks}" TextWrapping="Wrap" VerticalAlignment="Center" Padding="3"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>